@model Gestions_Client_Commande.Models.Client

<h2>Confirmer la suppression</h2>

<p>Voulez-vous vraiment supprimer le client <strong>@Model.Nom</strong> ?</p>

<form asp-action="Supprimer" method="post" onsubmit="return confirm('Confirmez-vous la suppression du client : @Model.Nom ?');">
    <input type="hidden" asp-for="IdClient" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
